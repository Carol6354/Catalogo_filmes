<div class="centralizer">
  <div class="signup-wrapper">
    <h2>Log in</h2>

    <style>
  .centralizer {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    background-color: #000000;
    padding: 20px;
  }

  .signup-wrapper {
    background-color: #c837c8;
    padding: 24px 32px;
    border-radius: 12px;
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
    max-width: 420px;
    width: 100%;
    box-sizing: border-box;
    font-family: 'Segoe UI', 'Helvetica Neue', sans-serif;
  }

  .signup-wrapper h2 {
    text-align: center;
    font-size: 28px;
    color: #000000;
    margin-bottom: 20px;
    font-weight: 700;
    letter-spacing: 0.5px;
  }

  .field {
    margin-bottom: 18px;
  }

  .field label {
    display: block;
    font-weight: 600;
    margin-bottom: 6px;
    color: #333;
    font-size: 15px;
  }

  .field input[type="email"],
  .field input[type="password"] {
    width: 100%;
    padding: 10px 12px;
    border: 1px solid #000000;
    border-radius: 6px;
    font-size: 15px;
    box-sizing: border-box;
    font-family: inherit;
  }

  .remember-field {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 14px;
    color: #333;
  }

  .actions {
    text-align: center;
    margin-top: 24px;
  }

  .actions input[type="submit"] {
    background-color: #000000;
    color: white;
    border: none;
    padding: 10px 20px;
    font-size: 15px;
    border-radius: 6px;
    cursor: pointer;
    font-weight: bold;
    transition: background-color 0.3s ease;
    font-family: inherit;
  }

  .actions input[type="submit"]:hover {
    background-color: #333333;
  }

  .devise-links {
    margin-top: 20px;
    text-align: center;
    font-size: 14px;
    font-family: inherit;
  }

  .devise-links a {
    color: #000000;
    text-decoration: none;
    font-weight: bold;
  }

  .devise-links a:hover {
    text-decoration: underline;
  }
</style>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, "E-mail" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "seuemail@exemplo.com" %>
      </div>

      <div class="field">
        <%= f.label :password, "Senha" %><br />
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "sua senha" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field remember-field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "Lembrar de mim" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Entrar" %>
      </div>
    <% end %>

    <div class="devise-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
